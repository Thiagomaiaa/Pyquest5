def equacao2grau(a,b,c):
    delta= (b**2) - 4 * a * c
    raizdelta = delta ** 0.5
    if delta < 0:
        print('S = {} = Ø')
    else:
        raiz1 = -(b + raizdelta) / (2 * a)
        raiz2 = -(b - raizdelta) / (2 * a)
        return print('O valor de delta é: ',delta,', e as raízes são S = {',raiz1,',',raiz2,'}.')

print('Escolha os valores dos coeficientes para o cálculo.')
a = float(input('a = '))
b = float(input('b = '))
c = float(input('c = '))
equacao2grau(a,b,c)
